        },
        "url": {
          "raw": "https://kzpv2tvu38.execute-api.us-east-2.amazonaws.com/prod/urls",
          "protocol": "https",
          "host": [
            "kzpv2tvu38",
            "execute-api",
            "us-east-2",
            "amazonaws",
            "com"
          ],
          "path": [
            "prod",
            "urls"
          ]
        },
        "description": "Creates a shortened URL from a long URL"
      },
      "response": []
    },
